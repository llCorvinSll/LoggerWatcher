{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "lib": [ "es2015.promise", "es5", "dom", "scripthost" ],
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@reactivex"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
